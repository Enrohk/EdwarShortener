@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<EdwardShortener.Objects.User>
@{
    Layout = "Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>


</head>
<body>
    <div class="container">

        <br><br><br>

        <div class="table-responsive col-lg-8" style="float: left;">

            <div class="panel panel-info">
                <div class="row">
                    <div class="panel-body">
                        <b>Paste your long URL here:</b>
                    </div>
                </div>
                <div class="row">
                    <div class="panel-body">
                        <div class="col-lg-10"> <input class="form-control"/></div>
                        <div> <button type="button" class="btn btn-primary">Shorten URL</button></div>
                    </div>
                </div>
                <div class="row">
                    <div class="panel-body">
                        Short your larges URLS with the best scissorman ever
                    </div>
                </div>
            </div>

            <div style="float: right;">
                <table>
                    <tr>
                        <td style="padding: 10px;"><p>Clicks for the past:</p></td>
                        <td>
                            <ul class="list-inline">
                                <li><a class="timeList" href="#" onclick="javascript:changClicksTime('hours',this);">Two hours</a></li>
                                <li><a class="timeList" href="#" onclick="javascript:changClicksTime('days',this);">Day</a></li>
                                <li><a class="timeList" href="#" onclick="javascript:changClicksTime('weeks',this);">Week</a></li>
                                <li><a class="timeList" href="#" onclick="javascript:changClicksTime('months',this);">Month</a></li>
                                <li><a class="timeList" href="#" onclick="javascript:changClicksTime('all',this);" style="font-weight: bold; color: black;">All time</a></li>
                            </ul>
                        </td>
                    </tr>
                </table>
            </div>
            @Html.Partial("Views/Home/_TableUrl.cshtml", @Model.userUrlList) 
            <div>
                <table class="col-lg-12">
                    <tr>
                        <td><button type="button" class="btn btn-default">Hide</button></td>
                        <td> <h6>Hidden URLs remain public, but are removed from your history</h6></td>
                        <td>
                            <table class="col-lg-12">
                                <tr>
                                    <td>
                                        <p><b>1 - 3</b> of <b>3</b></p>
                                    </td>
                                    <td>
                                        <ul class="pagination  pagination-sm">
                                            <li><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                                            <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                                        </ul>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </div>

  

        <div id="shortedUrlDV" style="float: right;">
                        
        </div>        

    </div>

    <script type="text/javascript">

       

        $("#allChecks").change(function () {
            $("input:checkbox").prop('checked', $(this).prop("checked"));
        });

        $('#mytable').on('click', 'tbody tr', function (event) {
            $(this).addClass('active').siblings().removeClass('active');
            $('#mytable').find('.glyphicon').hide();
            $(this).find('.glyphicon').show();            
            $.get("/test", function (data) {
                debugger;
                $("#shortedUrlDV").html(data);
                copyLink();
            });
           
        });


        function changClicksTime(time, elem) {

            $('.timeList').css('font-weight', '');
            $('.timeList').css('color', '');
            $(elem).css('font-weight', 'bold');
            $(elem).css('color', 'black');

        }

        function copyLink() {
            $('#copyLinkDv').tooltip({ title: "Press CTRL-C to copy", placement: "top", trigger: "focus" });
            $('#copyLinkDv').select();
            $('#copyLinkDv').focus();
            $("[data-toggle='tooltip']").tooltip('show');
        }
    </script>
    
</body>
</html>
